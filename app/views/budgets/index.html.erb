<div class="container">
  <div class="well">
    <%= link_to "New budget item", new_budget_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-budget"></div>
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Description</th>
        <th>Type</th>
        <th>Amount of money</th>
        <th>Date of operation</th>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody class="budget-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>
<div id="budget-modal" class="modal fade">
  <div class="modal-dialog">
    <div id="inner-budget-modal" class="modal-content"></div>
  </div>
</div>